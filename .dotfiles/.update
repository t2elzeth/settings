#!/bin/bash

RED='\033[0;31m'
NC='\033[0m' ### No Color

echo "${RED}Beginning the update process."
echo "${RED}Beginning the update process.."
echo "${RED}Beginning the update process..."

echo "${RED}----------UPDATING----------------------------${NC}"
sudo apt-get update -y

echo "${RED}----------UPGRADING---------------------------${NC}"
sudo apt-get upgrade -y

echo "${RED}----------FULL-UPGRADING----------------------${NC}"
sudo apt-get full-upgrade -y

echo "${RED}----------AUTOREMOVING------------------------${NC}"
sudo apt-get autoremove -y